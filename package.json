{
  "name": "cbm_2024",
  "version": "0.0.1",
  "description": "My 2024 portfolio build.",
  "author": "Christian B. Martinez (https://www.christianbmartinez.com/)",
  "packageManager": "pnpm@9.9.0+sha512.60c18acd138bff695d339be6ad13f7e936eea6745660d4cc4a776d5247c540d0edee1a563695c183a66eb917ef88f2b4feb1fc25f32a7adcadc7aaf3438e99c1",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "next lint",
    "start": "next start",
    "tw": "NODE_ENV=production && tailwindcss -i ./styles/index.css -o ./app/globals.css --optimize -m",
    "tw:watch": "NODE_ENV=production && tailwindcss -i ./styles/index.css -o ./app/globals.css --optimize -m -w",
    "deploy": "pnpm i && pnpm tw && pnpm build && pnpm start",
    "develop": "concurrently --names \"CSS,DEV\" -c \"bgBlue.bold,bgMagenta.bold\" -k \"pnpm tw:watch\" \"pnpm dev\""
  },
  "dependencies": {
    "next": "14.2.8",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.3.0",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@tailwindcss/cli": "next",
    "@tailwindcss/postcss": "next",
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "class-variance-authority": "latest",
    "clsx": "latest",
    "concurrently": "latest",
    "eslint": "8.57.0",
    "eslint-config-next": "^14.2.8",
    "postcss": "latest",
    "sharp": "latest",
    "tailwind-merge": "latest",
    "tailwindcss": "next",
    "typescript": "^5.5.4"
  },
  "browserslist": [
    "last 2 major versions", 
    "> 1%",
    "not dead",
    "unreleased versions", 
    "maintained node versions"
  ]
}
