{
  "name": "cbm_2024",
  "version": "0.0.1",
  "description": "My annual portfolio build featuring new technologies and configurations.",
  "author": "Christian B. Martinez (https://www.christianbmartinez.com/)",
  "private": true,
  "packageManager": "pnpm@9.6.0+sha512.38dc6fba8dba35b39340b9700112c2fe1e12f10b17134715a4aa98ccf7bb035e76fd981cf0bb384dfa98f8d6af5481c2bef2f4266a24bfa20c34eb7147ce0b5e",
  "scripts": {
    "build": "NODE_ENV=production && next build",
    "dev": "NODE_ENV=development next dev",
    "lint": "next lint",
    "start": "NODE_ENV=production && next start --no-cache",
    "tw:build": "NODE_ENV=production && tailwindcss -i ./styles/index.css -o app/globals.css --optimize -m",
    "tw:watch": "NODE_ENV=production && tailwindcss -i ./styles/index.css -o app/globals.css --optimize -m -w",
    "deploy": "pnpm install && pnpm tw:build && pnpm build && pnpm start",
    "develop": "concurrently --names \"CSS,DEV\" -c \"bgBlue.bold,bgMagenta.bold\" -k \"pnpm tw:watch\" \"pnpm dev\""
  },
  "dependencies": {
    "next": "^14.2.5",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@tailwindcss/cli": "4.0.0-alpha.18",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.2",
    "eslint": "8.57.0",
    "eslint-config-next": "^14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "sharp": "^0.33.4",
    "tailwind-merge": "^2.4.0",
    "tailwindcss": "4.0.0-alpha.18",
    "typescript": "^5.5.4"
  }
}
