{
  "name": "cbm_2024",
  "version": "0.0.1",
  "description": "My annual portfolio build featuring new technologies and configurations.",
  "author": "Christian B. Martinez (https://www.christianbmartinez.com/)",
  "private": true,
  "scripts": {
    "build": "next build",
    "clean": "rm -rf .cbm node_modules package-lock.json && npm cache clean --force && npm cache verify",
    "dev": "next dev",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "prod": "NODE_ENV=production && npm run tw:opt-min && npm run build && npm run dev",
    "start": "next start",
    "start:reset-cache": "next start -- --reset-cache",
    "tw:build": "tailwindcss -i ./styles/index.css -o app/globals.css",
    "tw:opt": "tailwindcss -i ./styles/index.css -o app/globals.css --optimize",
    "tw:opt-min": "tailwindcss -i ./styles/index.css -o app/globals.css --optimize -m",
    "tw:opt-min-w": "tailwindcss -i ./styles/index.css -o app/globals.css --optimize -m -w",
    "test:tw-build": "NODE_ENV=production && npm run tw:opt-min-w",
    "preview": "NODE_ENV=production && npm run tw:opt-min && npm run start"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-slot": "^1.1.0",
    "next": "14.2.5",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@tailwindcss/cli": "^4.0.0-alpha.18",
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/parser": "^7.17.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "sharp": "^0.33.4",
    "tailwind-merge": "^2.4.0",
    "tailwindcss": "^4.0.0-alpha.18",
    "typescript": "^5.5.4"
  }
}
